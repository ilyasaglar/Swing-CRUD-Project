create or replace PROCEDURE PR_UPDATE_EMPLOYEE
(
  PRM_EMP_ID IN NUMBER
, PRM_FIRST_NAME IN VARCHAR2
, PRM_LAST_NAME IN VARCHAR2
, PRM_EMAIL IN VARCHAR2
, PRM_PHONE IN VARCHAR2
, PRM_HIRE_DATE IN VARCHAR2
, PRM_JOB_ID IN VARCHAR2
, PRM_SALARY IN NUMBER
, PRM_COMM IN NUMBER
, PRM_MAN_ID IN NUMBER
, PRM_DEPT_ID IN NUMBER
)
AS 
BEGIN
  UPDATE EMPLOYEES
SET
EMPLOYEE_ID    = PRM_EMP_ID,
FIRST_NAME     = PRM_FIRST_NAME,
LAST_NAME      = PRM_LAST_NAME,
EMAIL          = PRM_EMAIL,
PHONE_NUMBER   = PRM_PHONE,
HIRE_DATE      = to_date(PRM_HIRE_DATE,'dd/MM/yyyy'),
JOB_ID         = PRM_JOB_ID,
SALARY         = PRM_SALARY,
COMMISSION_PCT = PRM_COMM,
MANAGER_ID     = PRM_MAN_ID,
DEPARTMENT_ID  = PRM_DEPT_ID,
DELETECOL  = 0
WHERE EMPLOYEE_ID  = PRM_EMP_ID;
END;